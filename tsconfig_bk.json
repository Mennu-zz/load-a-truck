{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "inlineSources": true,
    "strict": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}